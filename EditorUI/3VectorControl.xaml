<UserControl x:Class="EditorUI._3VectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EditorUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" MouseDoubleClick="UserControl_MouseDoubleClick">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="33*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="XBox" Grid.Column="0" Background="{x:Null}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextChanged="TextInputHandler"/>
        <TextBox Name="YBox" Grid.Column="1" Background="{x:Null}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  TextChanged="TextInputHandler"/>
        <TextBox Name="ZBox" Grid.Column="2" Background="{x:Null}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextChanged="TextInputHandler"/>
    </Grid>
</UserControl>
